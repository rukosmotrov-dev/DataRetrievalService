{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=DataRetrievalService;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Redis": {
    "UseRedis": true,
    "Configuration": "localhost:6379"
  },
  "Jwt": {
    "Key": "", // set via user-secrets
    "Issuer": "DataRetrievalService",
    "Audience": "DataRetrievalServiceClients",
    "TokenExpiryMinutes": 60
  },
  "FileStorage": {
    "Path": "StorageFiles",
    "CleanupIntervalMinutes": 31
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:3000", "http://localhost:4200" ]
  },
  "StorageSettings": {
    "Storages": [
      {
        "Name": "Redis Cache",
        "Type": "Redis Cache",
        "Priority": 1,
        "TtlMinutes": 10,
        "ConnectionSettings": {
          "Configuration": "localhost:6379"
        }
      },
      {
        "Name": "File Storage",
        "Type": "File Storage",
        "Priority": 2,
        "TtlMinutes": 30,
        "ConnectionSettings": {
          "Path": "StorageFiles"
        }
      },
      {
        "Name": "MSSQL Database",
        "Type": "MSSQL Database",
        "Priority": 3,
        "TtlMinutes": 0,
        "ConnectionSettings": {
          "ConnectionString": "DefaultConnection"
        }
      }
    ]
  }
}
